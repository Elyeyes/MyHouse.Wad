<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textModeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/helvetica"
        android:text="TextView"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ButtonApply"
        android:layout_width="80dp"
        android:layout_height="52dp"
        android:layout_marginEnd="40dp"
        android:backgroundTint="?attr/colorPrimary"
        android:fontFamily="@font/helvetica"
        android:text="Apply"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/textModeName"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonRemove"
        app:layout_constraintTop_toTopOf="@+id/textModeName" />

    <ImageButton
        android:id="@+id/imageButtonRemove"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:background="@color/trans"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/ButtonApply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ButtonApply"
        app:srcCompat="@drawable/close" />



</androidx.constraintlayout.widget.ConstraintLayout>