<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageDevice"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/shutter_" />

    <TextView
        android:id="@+id/textDeviceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/helvetica"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageDevice"
        app:layout_constraintStart_toEndOf="@+id/imageDevice"
        app:layout_constraintTop_toTopOf="@+id/imageDevice" />

    <Switch
        android:id="@+id/switchLight"
        android:layout_width="56dp"
        android:layout_height="34dp"
        android:layout_marginEnd="68dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/textDeviceName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textDeviceName"
        tools:visibility="visible" />

    <Button
        android:id="@+id/buttonDeviceStop"
        android:layout_width="97dp"
        android:layout_height="48dp"
        android:backgroundTint="?attr/colorPrimary"
        android:fontFamily="@font/helvetica"
        android:text="%"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/ibuttonDeviceUp"
        app:layout_constraintEnd_toStartOf="@+id/ibuttonDeviceDown"
        app:layout_constraintTop_toTopOf="@+id/ibuttonDeviceUp"
        tools:visibility="visible" />

    <ImageButton
        android:id="@+id/ibuttonDeviceDown"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/trans"
        android:scaleType="fitCenter"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/buttonDeviceStop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/buttonDeviceStop"
        app:srcCompat="@drawable/down"
        tools:visibility="visible" />

    <ImageButton
        android:id="@+id/ibuttonDeviceUp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/trans"
        android:scaleType="fitCenter"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/textDeviceName"
        app:layout_constraintEnd_toStartOf="@+id/buttonDeviceStop"
        app:layout_constraintTop_toTopOf="@+id/textDeviceName"
        app:srcCompat="@drawable/up"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>